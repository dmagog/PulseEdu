# Database configuration
DB_URL=postgresql://pulseedu:pulseedu@localhost:5432/pulseedu

# Message broker configuration
RABBITMQ_URL=amqp://pulseedu:pulseedu@localhost:5672//

# Application configuration
APP_SECRET=your-secret-key-here
APP_BASE_URL=http://localhost:8000

# Email configuration (for notifications)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
MAIL_FROM=noreply@pulseedu.local

# LLM configuration (Yandex.Cloud)
LLM_ENDPOINT=https://llm.api.cloud.yandex.net/foundationModels/v1/completion
LLM_API_KEY=your-yandex-api-key-here

# Excel import configuration
EXCEL_MAPPING_FILE=config/excel_mapping.yaml

# Development flags
APP_NOW_MODE=real
APP_FAKE_NOW=2025-01-01
HERO_ENABLED=off
LOAD_TEST_DATA=false

# LLM settings (can be overridden in admin panel)
LLM_MAX_RECS=3
LLM_REC_MAX_CHARS=200
LLM_CONTEXT_MAX_TOKENS=1500
LLM_TIMEOUT_SECONDS=10
LLM_RETRY_SCHEDULE=60,300,900
LLM_CACHE_TTL_HOURS=24
LLM_DEFAULT_LANG=ru
LLM_ALLOW_MARKDOWN=true
LLM_ALLOWED_TAGS=p,strong,em,ul,ol,li

# Monitoring settings
LLM_MONITORING_ENABLED=true
LLM_LOG_RETENTION_DAYS=30
LLM_ALERT_ERROR_RATE_PCT=10
LLM_ALERT_CONSECUTIVE_FAILS=5
LLM_ALERT_EMAIL_TO=admin@pulseedu.local

# Audit settings
AUTH_LOG_RETENTION_DAYS=90
